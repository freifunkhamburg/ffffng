        "moment": "^2.29.4",
        "ng-admin": "^1.0.13",
        "node-cron": "^3.0.2",
        "nodemailer": "^6.7.8",
        "nodemailer-html-to-text": "^3.2.0",
        "request": "^2.88.2",
        "serve-static": "^1.14.1",
        "sparkson": "^1.3.6",
        "sqlite": "^4.1.2",
        "sqlite3": "^5.0.11"
    },
